<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LIST APP</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a class="header-logo">LIST APP</a>
      <a href="/top" class="header-logo">トップに戻る</a>
      <a href="/new" class="new-button">リストに追加する</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>在庫リスト</h1>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column">ID</span>
          <span>在庫</span>
          <span class="id-quantity">数量</span>
        </div>
        <ul class="table-body">
            <% items.forEach((item) => {%>
            <li>
                <div class="item-data">
                    <span class="id-column"><%= item.id %></span>
                    <span class="name-column"><%= item.name %></span>
                    <span class="quantity-column"><%= item.quantity %></span>
                </div>
                <div class="item-menu">
                    <form action="/delete/ <%= item.id %> " method="post">
                      <input type="submit" value="削除">
                    </form>
                </div>
            </li>
            <% }) %>
        </ul>
      </div>
    </div>
  </body>
</html>
